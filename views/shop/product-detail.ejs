<% include('../includes/head.ejs') %>

  <% include('../includes/navigation.ejs') %>
    <%= console.log()%>
    <main>

      <% if(hasProducts) { %>

          <div class="grid">

            <article class="card product-item">

              <header class="card__header">
                  <h1 class="product__title"><%= product.title %></h1>
              </header>

              <div class="card__image">
                  <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Book">
              </div>

              <div class="card__content">

                  <h2 class="product__price">Price <%= product.price %></h2>
                  <p class="product__description">Description<%= product.description %></p>

                  <%- include('../includes/add-to-cart', {isAuthenticated}) %>


              </div>


            </article>

          </div>

          <!-- <a href="/getorders">get oders</a> -->

      <% } else { %>

          <h1>has no products</h1>

      <% } %>

    </main>

<%- include('../includes/end.ejs') %>
